<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.masai.sainath.gpay" >

    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logogpay"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logogpay"
        android:supportsRtl="true"
        android:theme="@style/Theme.Gpay" >
        <activity
            android:name=".Settings"
            android:exported="true" />
        <activity
            android:name=".BankAccount"
            android:exported="true" />
        <activity
            android:name=".Profile"
            android:exported="true" />
        <activity
            android:name=".RequestAcitvity"
            android:exported="true" />
        <activity
            android:name=".PayActivity"
            android:exported="true" />
        <activity
            android:name=".ChatActivity"
            android:exported="true" />
        <activity
            android:name=".login.OTPActivity"
            android:exported="true"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".login.GoogleAutho"
            android:exported="true" />
        <activity
            android:name=".Scanner"
            android:exported="true" />
        <activity
            android:name=".login.EnterNumber_LoginActivity"
            android:exported="true"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".SplashScreen"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            tools:ignore="DuplicateActivity" />
    </application>

</manifest>