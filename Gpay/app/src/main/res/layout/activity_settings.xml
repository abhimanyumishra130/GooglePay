<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile">


    <RelativeLayout
        android:id="@+id/realtive"
        android:layout_width="match_parent"
        android:background="@drawable/gpay"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/arrow"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:src="@drawable/ic_baseline_arrow_back_24"
            android:layout_margin="@dimen/_15sdp"
            />
        <ImageView
            android:id="@+id/dots"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:src="@drawable/more"
            android:layout_margin="@dimen/_15sdp"
            android:layout_alignParentEnd="true"
            />

        <TextView
            android:id="@+id/name"
            android:layout_below="@+id/arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sainath Reddy"
            android:textSize="@dimen/_20sdp"
            android:textColor="@color/black"
            android:layout_marginStart="@dimen/_20sdp"


            />
        <TextView
            android:id="@+id/PNumber"
            android:layout_below="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+91 7619374117"
            android:layout_marginTop="@dimen/_5sdp"
            android:textSize="@dimen/_13sdp"
            android:textColor="@color/black"
            android:layout_marginStart="@dimen/_20sdp"
            />

        <TextView
            android:id="@+id/Upi"
            android:layout_below="@+id/PNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sainath_OkHdfc@1826"
            android:layout_marginTop="@dimen/_5sdp"
            android:textSize="@dimen/_13sdp"
            android:textColor="@color/black"
            android:layout_marginStart="@dimen/_20sdp"
            />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ProfileImagee"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_below="@id/dots"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/_20sdp"
            android:src="@drawable/user"
            app:civ_border_color="@color/teal_700"
            app:civ_border_width="2dp" />


        <ImageView
            android:id="@+id/tropy"
            android:layout_width="@dimen/_26sdp"
            android:layout_height="@dimen/_26sdp"
            android:layout_below="@id/Upi"
            android:src="@drawable/trophy"
            android:layout_marginStart="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_40sdp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/tropy"
            android:text="Rs.80 reward earned"
            android:textColor="@color/black"
            android:layout_below="@id/Upi"
            android:textSize="@dimen/_14sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_45sdp"
            />



    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_below="@id/realtive"
        app:cardCornerRadius="@dimen/_20sdp"
        app:cardElevation="@dimen/_20sdp"
        android:layout_marginStart="@dimen/_13sdp"
        android:layout_marginEnd="@dimen/_13sdp"
        android:paddingTop="@dimen/_20sdp"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:paddingBottom="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/settingup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Set up the payments methods 1/2"
                android:textColor="@color/black"
                android:layout_margin="20dp"
                android:textSize="15sp"

                />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/blue"
                android:layout_alignParentEnd="true"
                android:layout_margin="@dimen/_15sdp"

                />


            <ImageView
                android:id="@+id/bank"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_below="@id/settingup"
                android:layout_marginStart="@dimen/_70sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:src="@drawable/bank" />

            <TextView
                android:id="@+id/bankaccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/bank"
                android:text="Bank account"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginStart="@dimen/_50sdp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/bankaccount"
                android:text="2 accounts"
                android:textSize="12sp"
                android:layout_marginStart="@dimen/_60sdp"
                />
            <ImageView
                android:id="@+id/business"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:src="@drawable/suitcase"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/settingup"
                android:layout_marginEnd="@dimen/_70sdp"
                android:layout_marginTop="@dimen/_20sdp"
                />

            <TextView
                android:id="@+id/payBusiness"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/bank"
                android:text="Pay Business"
                android:textSize="15sp"
                android:layout_alignParentEnd="true"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_50sdp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/payBusiness"
                android:text="Debit?credit card"
                android:layout_alignParentEnd="true"
                android:textSize="12sp"
                android:layout_marginEnd="@dimen/_40sdp"
                />
        </RelativeLayout>
        
    </androidx.cardview.widget.CardView>
    
    <ImageView
        android:id="@+id/house"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/house"
        android:layout_below="@id/cardview"
        android:layout_marginTop="@dimen/_40sdp"
        android:layout_marginStart="@dimen/_20sdp"
        />
    <TextView
        android:id="@+id/txtBusiness"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Business Page"
        android:textSize="@dimen/_13sdp"
        android:layout_toEndOf="@+id/house"
        android:layout_below="@id/cardview"
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:textColor="@color/black"
        />
    <TextView
        android:id="@+id/txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Publish and share information about \n your business"
        android:layout_toEndOf="@+id/house"
        android:layout_below="@id/txtBusiness"
        android:layout_marginStart="@dimen/_10sdp"
        />
    <TextView
        android:id="@+id/create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create"
        android:textStyle="bold"
        android:textSize="@dimen/_15sdp"
        android:textColor="#4285F4"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/txtBusiness"
        android:layout_marginEnd="@dimen/_10sdp"
        />
    <ImageView
        android:id="@+id/gift"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/gift"
        android:layout_below="@id/house"
        android:layout_marginTop="@dimen/_50sdp"
        android:layout_marginStart="@dimen/_20sdp"
        />
    <TextView
        android:id="@+id/txtgift"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Invite friends,get rewards"
        android:textSize="@dimen/_13sdp"
        android:layout_toEndOf="@+id/house"
        android:layout_below="@id/txt"
        android:layout_marginTop="35dp"
        android:layout_marginStart="@dimen/_10sdp"
        android:textColor="@color/black"
        />
    <TextView
        android:id="@+id/txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="share your code dujs889"
        android:layout_toEndOf="@+id/house"
        android:layout_below="@id/txtgift"
        android:layout_marginStart="@dimen/_10sdp"
        />
    <TextView
        android:id="@+id/share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Share"
        android:textStyle="bold"
        android:textSize="@dimen/_15sdp"
        android:textColor="#4285F4"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/create"
        android:layout_marginTop="@dimen/_40sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        />

    <ImageView
        android:id="@+id/settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/settings"
        android:layout_below="@id/gift"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_30sdp"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:layout_toEndOf="@+id/settings"
        android:layout_below="@id/txt2"
        android:layout_marginTop="@dimen/_25sdp"
        android:textSize="@dimen/_12sdp"
        android:textColor="@color/black"
        android:layout_marginStart="@dimen/_12sdp"
        />


    <ImageView
        android:id="@+id/help"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/information"

        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Help / feedback"
        android:textSize="@dimen/_12sdp"
        android:textColor="@color/black"
        android:layout_toRightOf="@+id/help"
        android:layout_below="@id/settings"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_13sdp"


        />


</RelativeLayout>